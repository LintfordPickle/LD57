<Domain package="mypackage">
	<ActionSet>

		<!-- Team Level Functions -->


		<!-- Allows for dynamically setting the aggression of a team. -->
		<Action name="ComputeAggression" />

		<Action name="ComputeCanAffordGlobalExpand" />
		<Action name="ComputeCanAffordGlobalAttack" />


		<!-- Settlement Level Functions -->

		<!-- Computes the closest unclaimed settlement. -->
		<Action name="ComputeClosestNeutralSettlement" />

		<!-- Computes the weakest enemy settlement. -->
		<Action name="ComputeWeakestEnemySettlement" />

		<!-- Computes the strongest enemy settlement. -->
		<!-- <Action name="ComputeStrongestEnemySettlement" /> -->

		<Action name="SetRequestPopToExpand" />
		<Action name="SetRequestPopToAttack" />

		<!-- Moves a type of unit from one settlement to another -->
		<Action name="MoveTroops">
			<Parameter name="fromSettlementUid" type="INTEGER" />
			<Parameter name="toSettlementUid" type="INTEGER" />
			<Parameter name="numUnits" type="INTEGER" />
		</Action>

		<Action name="MoveWorkers">
			<Parameter name="fromSettlementUid" type="INTEGER" />
			<Parameter name="toSettlementUid" type="INTEGER" />
			<Parameter name="numUnits" type="INTEGER" />
		</Action>

	</ActionSet>

	<SensorSet>

		<!-- Checks for the presence of any unoccupied settlements. -->
		<Sensor name="AnyUnoccupiedSettlements" type="BOOLEAN" />

		<!-- Checks for the presence of any schools to train workers (to
		soldiers/demons). -->
		<Sensor name="AnySchools" type="BOOLEAN" />

		<Sensor name="CheckGlobalExpand" type="BOOLEAN" />
		<Sensor name="CheckGlobalAttack" type="BOOLEAN" />

		<Sensor name="CheckCanAffordLocalExpand" type="BOOLEAN" />
		<Sensor name="CheckCanAffordLocalAttack" type="BOOLEAN" />

		<Sensor name="CheckRequestPopExpandSet" type="BOOLEAN" />
		<Sensor name="CheckRequestPopAttackSet" type="BOOLEAN" />

	</SensorSet>

	<GoalSet>
	</GoalSet>

	<EntitySet>
	</EntitySet>

</Domain>